/* pages/view/view.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  background-color: transparent;
} 
.view-main{
  position: relative;
  overflow: hidden;
  padding-top: 225px;
}
.video{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  width: 100%;
}
.info {
  padding: 5vh 2vh;
  overflow: hidden;
  text-align: center;
  border-bottom: 1px solid #74747424;
}
.info .title {
  font-size: 16px;
  font-weight: 800;
  color: black;
}
.info .titleInfo {
  margin: 2vh 0px;
  color: #747474;
  font-size: 12px;
}
.info .content {
  text-align: left;
  font-size: 15px;
  color: black;
}
.info .more {
  color: #3385ff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 3vh;
  padding-bottom: 0px;
}
.info .more span {
  font-size: 14px;
}
.end {
  border-top: 1px solid #74747424;
  text-align: center;
  font-size: 12px;
  color: #747474;
  padding: 2vh;
}
.loadding{
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 9999;
}